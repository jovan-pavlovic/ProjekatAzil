@using ProjekatAzil.Models
@model ProjekatAzil.Models.DogsViewModel


<div class="gallery">
    <div class="container">
        <div class="gallery-grids">
            @foreach (var item in Model.Dogs)
            {
                <div class="col-md-4 gallery-grid">
                    <div class="grid">
                        <figure class="effect-apollo">
                            <a class="example-image-link" href='@Url.Action("Details", new { controller = "Dogs", id = item.Id })'><img src="~/Content/Images/@item.MainImage" alt="" height="350" />
                                <figcaption>
                                    <p>
                                        @Html.DisplayFor(modelItem => item.Name)
                                        @Html.Raw(",")
                                        @Html.DisplayFor(modelItem => item.Age)
                                    </p>
                                </figcaption>
                            </a>
                        </figure>
                        
                        
                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil", title = "Edit" })
                        @Html.Raw("|")
                        @if (User.IsInRole(RolesCfg.ADMIN))
                        {
                            if (Model.Wishlist == false)
                            {
                                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove", title = "Delete" })
                                @Html.Raw("|")
                            }
                            else
                            {
                                @Html.ActionLink(" ", "RemoveFromWishlist", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove", title = "Delete from wishlist" })
                                @Html.Raw("|")
                            }

                            }
                        @Html.ActionLink(" ", "AddToWishlist", new { id = item.Id }, new { @class = "glyphicon glyphicon-heart", title = "Add to wishlist" })
                        
                        

                    </div>
                </div>
               
            }
            <div class="clearfix"> </div>
            <script src="js/lightbox-plus-jquery.min.js"></script>
        </div>
    </div>
</div>
<div class="text-center">
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        @Html.ActionLink(i.ToString(), "Index", Model.Pagination(i), new { listMode = false });
        @Html.Raw("|")
    }
</div>