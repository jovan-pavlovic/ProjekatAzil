@model ProjekatAzil.Models.VolunteerForm

@section HeaderBottom{
    <div class="about-heading">
        <div class="container">
            <h2>Volunteer Form</h2>
        </div>
    </div>
}

    <div class="container">

        @using (Html.BeginForm("Index", "Forms", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <br />
            <br />
            <p>Ime:</p>
            <input type="text" name="Model.FirstName" value="">
            <br />
            <br />
            <p>Prezime:</p>
            <input type="text" name="Model.LastName" value="">
            <br />
            <br />
            <p>Broj Telefona:</p>
            <input type="number" name="Model.PhoneNumber" value="">
            <br />
            <br />
            <p>E-mail:</p>
            <input type="email" name="Model.Email">
            <br />
            <br />
            <p>Prijavljujem se za:</p>

            <select name="Model.Services">
                <option value="Model.DogWalking">Setanje pasa</option>
                <option value="Model.DogCare">Nega</option>
                <option value="Model.ShelterMaintenance">Odrzavanje azila</option>
                <option value="Model.Anything">Zavisno od potreba azila</option>
            </select>
            <br />
            <br />
            <p>Dani kojima zelim da volontiram:</p>
            <br />

            foreach (ProjekatAzil.Models.Days weekDay in Enum.GetValues(typeof(ProjekatAzil.Models.Days)))
            {
                <input type="checkbox" name="Days" value="@weekDay" />
                @Html.Label(weekDay.ToString())
            }
            <br />
            <br />
            <p>Komentar:</p>
            <textarea rows="5" cols="60">
            </textarea>
            <br />
            <br />
            <input type="submit" value="Submit">
            <br />
            <br />
        }

    </div>


