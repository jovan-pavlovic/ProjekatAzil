@using ProjekatAzil.Models
@model ProjekatAzil.Models.Dog

@section HeaderBottom{
    <div class="about-heading">
        <div class="container">
            <h2>Details</h2>
        </div>
    </div>
}

<h2>@Model.Name</h2>

<div>
    <h4>Dog</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.YearOfBirth)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YearOfBirth)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sex)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sex)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Weight)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Weight)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Adoption)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adoption)
        </dd>
        <dd>
            @foreach (var news in Model.Events)
            {
                @Html.ActionLink(news.Title, "Details" + "/" + news.Id, "Events")
            }
        </dd>

    </dl>
</div>

@if (Model.Images != null)
{
    foreach (var item in Model.Images)
    {
        <a href="~/Content/Dog Images/@item.NameOfPicture" data-lightbox="roadtrip"><img src="~/Content/Dog Images/@item.NameOfPicture" class="thumbnail" align="middle" /></a>
    }
}


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @if (Request.UrlReferrer.AbsolutePath.Equals(Url.RouteUrl("Wishlist")))
    {
        @Html.ActionLink("Back to List", "Index", new { wishlist = true })
    }
    else
    {
        @Html.ActionLink("Back to List", "Index")
    }

</p>
