@using ProjekatAzil.Models
@model ProjekatAzil.Models.DogsViewModel

<div class="gallery">
    <div class="container">
        <div class="gallery-grids">
            @foreach (var item in Model.Dogs)
            {
                <div class="col-md-4 gallery-grid">
                    <div class="grid">
                        <figure class="effect-apollo">
                            <a class="example-image-link" href='@Url.Action("Details", new { controller = "Dogs", id = item.Id })'><img src="~/Content/Images/@item.MainImage" alt="" height="300" />
                                <figcaption>
                                    <p>
                                        @Html.DisplayFor(modelItem => item.Name)
                                        @Html.Raw(",")
                                        @Html.DisplayFor(modelItem => item.Age)
                                    </p>
                                </figcaption>
                            </a>
                        </figure>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.Raw("|")
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        @Html.ActionLink("Add to Wishlist", "AddToWishlist", new { id = item.Id })

                    </div>
                </div>
               
            }
            <div class="clearfix"> </div>
            <script src="js/lightbox-plus-jquery.min.js"></script>
        </div>
    </div>
</div>

@for (int i = 1; i <= Model.TotalPages; i++)
{
    @Html.ActionLink(i.ToString(), "Index", Model.Pagination(i), new { listMode = false });
    @Html.Raw("|")
}