@model ProjekatAzil.Models.Donation
@{
    ViewBag.Title = "Donation";
}

<h2>Donation</h2>

@using (Html.BeginForm("Index", "Forms", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <p>Ime:</p>
    <input type="text" name="Model.FirstName" value="">
    <br />
    <p>Prezime:</p>
    <input type="text" name="Model.LastName" value="">
    <br />
    <p>Broj Telefona:</p>
    <input type="number" name="Model.PhoneNumber" value="">
    <br />
    <p>E-mail:</p>
    <input type="email" name="Model.Email">
    <br />
    <p>Tip Donacije:</p>

    foreach (ProjekatAzil.Models.DonationType don in Enum.GetValues(typeof(ProjekatAzil.Models.DonationType)))
    {
        <input type="checkbox" name="DonationType" value="@don" />
        @Html.Label(don.ToString())
    }

    @*<br />
    <p>Komentar:</p>
    <textarea rows="5" cols="60">
    </textarea>*@
    <br />
    <input type="submit" value="Submit">


}